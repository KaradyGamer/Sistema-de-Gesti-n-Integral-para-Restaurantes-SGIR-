# ========================================
# SGIR - Configuraci√≥n del Sistema (EJEMPLO)
# ========================================
# IMPORTANTE: Copiar este archivo a .env y configurar valores reales
# NO SUBIR .env al repositorio

# === DJANGO ===
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=False

ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# === CORS / CSRF ===
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=False

# === BASE DE DATOS (POSTGRES + DOCKER) ===
DB_ENGINE=postgres

POSTGRES_DB=sgir
POSTGRES_USER=sgir_user
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# === QR ===
QR_HOST=your-server-ip-or-domain:8000

# === JWT ===
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=14

# === INTEGRACIONES (n8n) ===
N8N_API_KEY=generar-clave-larga-segura-minimo-32-caracteres
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=cambiar-password-seguro
N8N_ENCRYPTION_KEY=generar-clave-32-caracteres-para-encriptacion
N8N_WEBHOOK_URL=http://localhost:5678
