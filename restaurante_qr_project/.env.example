# ====================================
# SGIR - Sistema de Gestión Integral para Restaurantes
# Archivo de configuración de ejemplo
# ====================================
# IMPORTANTE:
# 1. Copia este archivo como .env: cp .env.example .env
# 2. Genera nueva SECRET_KEY con:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 3. Reemplaza TODOS los valores según tu entorno
# 4. NUNCA subas el archivo .env al repositorio
# ====================================

# === SEGURIDAD ===
SECRET_KEY=pon_una_clave_larga_aleatoria_aqui_minimo_50_caracteres

# === MODO DE OPERACIÓN ===
# Desarrollo: True | Producción: False
DEBUG=True

# === HOSTS PERMITIDOS ===
# Desarrollo: localhost,127.0.0.1
# Producción: tu-dominio.com,www.tu-dominio.com
ALLOWED_HOSTS=localhost,127.0.0.1

# === BASE DE DATOS ===
# Opciones: sqlite | postgres
DB_ENGINE=sqlite

# PostgreSQL (solo si DB_ENGINE=postgres)
POSTGRES_DB=sgir
POSTGRES_USER=sgir_user
POSTGRES_PASSWORD=super_password_seguro
POSTGRES_HOST=db
POSTGRES_PORT=5432

# === CORS (Cross-Origin Resource Sharing) ===
# URLs permitidas para hacer peticiones al backend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === CSRF (Cross-Site Request Forgery) ===
# Orígenes de confianza para formularios
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# === JWT (JSON Web Tokens) ===
# Tiempo de vida en minutos
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=20160

# === COOKIES SEGURAS ===
# Desarrollo: False | Producción: True (requiere HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ====================================
# CONFIGURACIÓN PARA PRODUCCIÓN
# ====================================
# Cuando despliegues en servidor, usa:
#
# DEBUG=False
# ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com
# DB_ENGINE=postgres
# POSTGRES_DB=sgir_prod
# POSTGRES_USER=sgir_prod_user
# POSTGRES_PASSWORD=password_super_seguro_aleatorio
# POSTGRES_HOST=db
# POSTGRES_PORT=5432
# CORS_ALLOWED_ORIGINS=https://tu-dominio.com
# CSRF_TRUSTED_ORIGINS=https://tu-dominio.com
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
